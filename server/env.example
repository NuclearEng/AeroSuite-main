# Server Configuration
NODE_ENV=production
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/aerosuite
# Customer API (Verification)
CUSTOMER_API_BASE_URL=https://customer.example.com
CUSTOMER_VERIFICATION_RESULT_PATH=/verification/results
CUSTOMER_SUBSCRIPTION_HEADER_KEY=Ocp-Apim-Subscription-Key
CUSTOMER_SUBSCRIPTION_KEY=

# mTLS client certificate for outbound requests
CLIENT_CERT_PATH=
CLIENT_KEY_PATH=
CLIENT_KEY_PASSPHRASE=
CLIENT_CA_PATH=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Email Service (SendGrid/AWS SES)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your-email-api-key
EMAIL_FROM=noreply@aerosuite.com

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=aerosuite-uploads

# Monitoring
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# API Keys
GOOGLE_MAPS_API_KEY=your-google-maps-key
STRIPE_SECRET_KEY=your-stripe-secret-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Session
SESSION_SECRET=your-session-secret-change-this 