// Define available theme variants
export type ThemeVariant = 'blue' | 'purple' | 'emerald' | 'amber' | 'rose' | 'gray';

// Create theme configurations for light and dark mode with variants
export const createThemeOptions = (mode: 'light' | 'dark', variant: ThemeVariant = 'blue'): ThemeOptions => {
  let palette: PaletteOptions;

  switch (variant) {
    case 'purple':
      palette = mode === 'light' ? purpleLightPalette : purpleDarkPalette;
      break;
    case 'emerald':
      palette = mode === 'light' ? emeraldLightPalette : emeraldDarkPalette;
      break;
    case 'amber':
      palette = mode === 'light' ? amberLightPalette : amberDarkPalette;
      break;
    case 'rose':
      palette = mode === 'light' ? roseLightPalette : roseDarkPalette;
      break;
    case 'gray':
      palette = mode === 'light' ? grayLightPalette : grayDarkPalette;
      break;
    default:
      palette = mode === 'light' ? lightPalette : darkPalette;
      break;
  }
  
  // Ensure palette has proper contrast for accessibility
  const accessiblePalette = createAccessiblePalette(palette);

  return {
    ...baseTheme,
    palette: accessiblePalette,
  };
};

// For backward compatibility
export const lightTheme: ThemeOptions = createThemeOptions('light', 'blue');
export const darkTheme: ThemeOptions = createThemeOptions('dark', 'blue');

export default lightTheme; 