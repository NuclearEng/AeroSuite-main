#!/bin/bash

# TypeScript Pre-commit Hook
echo "ğŸ” Running TypeScript checks..."

# Run TypeScript compiler
cd client && npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript errors found. Running auto-fixer..."
  node ../scripts/typescript-auto-fixer.js
  
  # Check again
  npm run type-check
  if [ $? -ne 0 ]; then
    echo "âŒ TypeScript errors remain after auto-fix. Please fix manually."
    exit 1
  fi
  
  echo "âœ… TypeScript errors auto-fixed. Please review and commit the changes."
  exit 1
fi

echo "âœ… TypeScript checks passed!"
exit 0
